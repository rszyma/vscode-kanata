{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "outDir": "out",
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES2022",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
  },
  "exclude": [
    "./node_modules",
    "./out",
    "kanata",
    "kanata-local"
  ],
  "include": [],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    },
    {
      "path": "./test"
    }
  ]
}